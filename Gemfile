source "https://rubygems.org"
gem 'sinatra'              # simple web framework for Ruby
gem 'pry'                  # enable me to test/run on the command line
gem 'rake'                 # for running any tasks defined in the Rake file
gem 'shotgun'              # it runs the server
gem 'require_all'          # a gem that loads all the dependencies
gem 'rantly'               # Rantly to generate random test data, and use its Test::Unit extension for property-based testing.
gem 'minitest'             # for unit tests
gem 'rack-test'