{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["node", "jest", "supertest"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.html"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
